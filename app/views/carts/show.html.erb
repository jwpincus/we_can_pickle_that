<h1>Your Cart</h1>

<% if @cart.empty? %>
  <%= render partial: 'cart_empty' %>
<% else %>
  <%= render partial: 'cart_table' %>
  <div>
    <h4>Total Price: $<%= @cart.cart_total %></h4>
    <h4>Total Quantity: <%= @cart.cart_quantity %></h4>
  </div>
  <%= render partial: 'checkout_buttons' if current_user %>
  <%= render partial: 'login_button' unless current_user %>
<% end %>
<h4><%= link_to "View Past Orders", orders_path %></h4>
