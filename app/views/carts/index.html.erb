
<% @order_items.each do |order_item| %>
  Item: <%= order_item.item.title %>
  Description: <%= order_item.item.description %>
  <img src="<%=order_item.item.image_url%>" alt="<%=order_item.item.title%>">
  Quantity: <%= order_item.quantity %>
  $<%= order_item.item.price %>
  <%= order_item.subtotal %>
  <% item_id = order_item.item.id %>
  <%= button_to "Remove", '/cart/remove', method: :put, params:[item_id: item_id] %>
<% end %>

Total Price: $<%= @cart.cart_total %>
Total Quantity: <%= @cart.cart_quantity %>
