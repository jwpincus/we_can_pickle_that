<h1><span class="whiteblock">Please enter your shipping address:</span></h1>

<div class="whiteblock">
<%= form_for @display_user, url:update_user_path do |f| %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.select :state, options_for_select(us_states) %>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>

  <%= f.submit "Update Address" %>

  <%= hidden_field_tag 'token', @post_url %>

<% end %>
</div>
