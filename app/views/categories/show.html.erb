<h1> <%= @category.name %></h1>

<%= button_to "View Cart" %>

<% @category.items.each do |item| %>
  <h2><%= item.title %></h2>
  <p> <%= item.description %> </p>
  <p> <%= item.price %> </p>
  <img src="<%=item.image_url%>" alt="<%=item.title%>">
  <!-- <%#= button_to "Add to Cart", cart_path, method: :get %> -->
<% end %>
